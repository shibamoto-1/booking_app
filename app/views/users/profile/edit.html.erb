<div class="my-20 mx-10">
  <div class="w-1/2 mx-auto border-2 rounded-md p-5">
    <p class="text-2xl">プロフィール編集</p>

    <div class="mt-10 mb-5">
      <%= form_with model: @user, url: users_profile_update_path do |f| %>
        <div class="space-y-6 mb-5">
          <div class="flex justify-between">
            <%= f.label :name %>
            <%= f.text_field :name, class: "input" %>
          </div> 
          <div class="flex justify-between">
            <%= f.label :profile %>
            <%= f.text_area :profile, class: "input" %>
          </div>
          <div class="flex justify-between">
            <%= f.label :avater %>
            <%= f.file_field :avater, class: "file-input" %>
          </div>
        </div>
        <%= f.submit "作成", class: "btn btn-primary w-full" %>
      <% end %>
    </div>

    <%= link_to "キャンセル", :back, class: "btn w-full text-xs" %>
  </div>
</div>
