<div class="mx-10 my-20">
  <div class="flex space-x-12">
    <div class="w-1/5">
      <%= link_to "アカウント", users_account_path, class: "border p-5 block" %>
      <%= link_to "プロフィール", users_profile_path, class: "text-orange-500 border p-5 block" %>
    </div>
    <div class="w-full">
      <div class="border-b flex justify-between p-2 items-center">
        <h1 class="text-2xl">プロフィール</h1>
        <%= link_to "編集", users_profile_edit_path, class: "text-xl text-blue-500 link mr-5" %>
      </div>

      <div class="px-2 py-5 space-y-5">
        <div class="flex">
          <p class="w-1/4 font-bold content-center">アイコン画像</p>
          <%= image_tag @user.avater, class: "size-20 object-cover rounded-full" %>
        </div>
        <div class="flex">
          <p class="w-1/4 font-semibold">名前</p>
          <p class="w-3/4"><%= @user.name %></p>
        </div>
        <div class="flex text-wrap">
          <p class="w-1/4 font-semibold">自己紹介</p>
          <p class="w-3/4"><%= @user.profile %></p>
        </div>
      </div>
    </div>
  </div>
</div>
