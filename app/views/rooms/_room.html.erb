<div class="card bg-stone-300 w-96 shadow-sm">
  <figure class="h-52">
    <%= image_tag room.image %>
  </figure> 
  <div class="card-body">
    <p class="text-xl opacity-50"><%= room.name %></p>
    <p class="opacity-50"><%= room.address %></p>
    <p class="my-3 line-clamp-3 break-words"><%= room.introduction %></p>
    <p class="text-2xl text-blue-500 mb-3">¥<%= room.fee.to_s(:delimited) %>~</p>
    <% if controller.action_name == "own" %>
      <%= link_to "編集", edit_room_path(room.id), class: "btn btn-primary" %>
      <%= link_to "削除", room_path(room.id), method: :delete, data: { confirm: "本当に削除しますか？"}, class: "btn btn-error" %>
    <% else %>
      <%= link_to "詳細はこちら", room_path(room.id), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>