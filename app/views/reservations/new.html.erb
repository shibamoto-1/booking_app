<div class="card bg-base-100 w-96 shadow-sm">
  <div class="card-body items-center text-center">
    <p>チェックイン</p>
    <p><%= @reservation.check_in_date %></p>
    <p>チェックアウト</p>
    <p><%= @reservation.check_out_date %></p>
    <p>人数</p>
    <p><%= @reservation.member_count %></p>
    <p>料金</p>
    <p><%= @reservation.room.fee %></p>
    <p><%= (@reservation.check_out_date.to_date - @reservation.check_in_date.to_date).to_i * @reservation.room.fee * @reservation.member_count %></p>
    
    <%= form_with model: @reservation do |f| %>
      <%= f.hidden_field :check_in_date %>
      <%= f.hidden_field :check_out_date %>
      <%= f.hidden_field :member_count %>
      <%= f.hidden_field :room_id %>
      <%= f.submit "予約する", class: "btn" %>
    <% end %>
  </div>
</div>