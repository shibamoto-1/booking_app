<div class="my-20 mx-10">
  <div class="w-2/3 mx-auto">
    <div class="mb-16 space-y-10">
      <%= image_tag @reservation.room.image %>
      <div class="flex justify-between w-4/5">
        <div class="opacity-80">
          <p class="text-xl"><%= @reservation.room.name %></p>
          <p><%= @reservation.room.address %></p>
        </div>
        <div>
          <p class="text-xl text-blue-500">¥<%= @reservation.room.fee.to_s(:delimited) %>~</p>
        </div>
      </div>
    </div>
    <div class="border-2 rounded-md p-5">
      <h1 class="text-2xl mb-8">再予約</h1>

      <%= form_with model: @reservation do |f| %>
        <div class="space-y-5">
          <div class="flex justify-between">
            <%= f.label :check_in_date %>
            <div class="w-1/3">
              <%= f.date_field :check_in_date, class: "input" %>
              <% if @reservation.errors.include?(:check_in_date) %>
                <p class="text-sm text-red-500"><%= @reservation.errors.full_messages_for(:check_in_date).first %></p>
              <% end %>
            </div>
          </div>
          <div class="flex justify-between">
            <%= f.label :check_out_date %>
            <div class="w-1/3">
              <%= f.date_field :check_out_date, class: "input" %>
              <% if @reservation.errors.include?(:check_out_date) %>
                <p class="text-sm text-red-500"><%= @reservation.errors.full_messages_for(:check_out_date).first %></p>
              <% end %>
            </div>
          </div>
          <div class="flex justify-between">
            <%= f.label :member_count %>
            <div class="w-1/3">
              <%= f.text_field :member_count, class: "input" %>
              <% if @reservation.errors.include?(:member_count) %>
                <p class="text-sm text-red-500"><%= @reservation.errors.full_messages_for(:member_count).first %></p>
              <% end %>

            </div>
          </div>
          <div class="flex flex-col space-y-5"> 
            <%= f.submit "再予約する", class: "btn btn-primary" %>
            <%= link_to "キャンセル", 'javascript:history.back()', class: "btn" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
