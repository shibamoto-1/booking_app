<div class="container  mx-auto pt-28 px-24">
  <div class="fieldset w-xs bg-base-200 border border-base-300 p-4 rounded-box">
    <h2 class="text-xl py-5">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="pb-5">
        <%= f.label :name, class: "fieldset-label" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "name", class: "input" %>
        <% if @user.errors.include?(:name) %>
          <p class="text-sm text-red-500"><%= @user.errors.full_messages_for(:name).first %></p>
        <% end %>
      </div>


      <div class="pb-5">
        <%= f.label :email, class: "fieldset-label" %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "email" , class: "input" %>
        <% if @user.errors.include?(:email) %>
          <p class="text-sm text-red-500"><%= @user.errors.full_messages_for(:email).first %></p>
        <% end %>
      </div>

      <div class="pb-5">
        <%= f.label :password, class: "fieldset-label" %>
        <% if @minimum_password_length %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length} characters minimum"  , class: "input" %>
        <% else %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "password" , class: "input" %>
        <% end %>
        <% if @user.errors.include?(:password) %>
          <p class="text-sm text-red-500"><%= @user.errors.full_messages_for(:password).first %></p>
        <% end %>
      </div>

      <div class="pb-5">
        <%= f.label :password_confirmation, class: "fieldset-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password" , class: "input" %>
        <% if @user.errors.include?(:password_confirmation) %>
          <p class="text-sm text-red-500"><%= @user.errors.full_messages_for(:password_confirmation).first %></p>
        <% end %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-neutral mt-4"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>